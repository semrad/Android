<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.yabis.codekobi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Yabisio"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
        <activity
            android:name=".activities.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.GetCodeActivity" />
        <activity android:name=".activities.UserSettingsActivity" />
        <activity android:name=".activities.settings.ProfileActivity" />
        <activity
            android:name=".activities.settings.NotificationActivity"
            android:label="@string/title_activity_notification"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.settings.CardActivity" />
        <activity android:name=".activities.settings.PaymentStatsActivity" />
        <activity android:name=".activities.settings.SupportActivity" />
        <activity android:name=".activities.settings.AboutActivity" />
        <activity android:name=".activities.ValidateCodeActivity"></activity>
    </application>

</manifest>